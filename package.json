{
    "name": "selene-ide",
    "description": "A self-customed theia-based IDE, pre-packed with some useful ready-to-use extensions",
    "author": "Duc Nguyen - DukeNgn",
    "private":"true",
    "version": "0.0.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/DukeNgn/selene-ide"
    },
    "scripts": {
        "preinstall": "node-gyp install",
        "build:electron": "yarn --cwd electron install",
        "rebuild:electron": "theia rebuild:electron",
        "prepare": "yarn rebuild:electron && yarn build:electron",
        "start:electron": "yarn prepare && yarn --cwd electron start",
        "package:preview": "yarn prepare && yarn --cwd electron package:preview",
        "package": "yarn prepare && yarn --cwd electron package"
    },
    "workspaces": [
        "electron"
    ],
    "devDependencies": {
        "@theia/cli": "latest"
    }
}